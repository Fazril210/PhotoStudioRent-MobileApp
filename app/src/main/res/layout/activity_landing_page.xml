<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomepage"
    tools:context=".LandingPage">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginBottom="650dp"
      android:src="@drawable/logostudio" />
  
  <TextView
      android:id="@+id/datang"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="Selamat \nDatang"
    android:textColor="@color/black"
      android:layout_marginLeft="20dp"
      android:textStyle="bold"
      android:textSize="30pt"
     android:layout_marginTop="350dp"/>

  <TextView
      android:id="@+id/thirtyone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:text="di Thirtyone Studio Mobile"
      android:layout_below="@id/datang"
    android:textColor="@color/black"
      android:textStyle="bold"
      android:layout_marginLeft="20dp"
      android:textSize="13pt"/>

  <TextView
      android:id="@+id/ucapan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/thirtyone"
      android:textStyle="bold"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:text="Kini kamu bisa eksplor sesi foto sesuai keinginanmu melalui aplikasi!"
      android:textColor="@color/black"
      android:textSize="7pt"
      tools:ignore="TextSizeCheck" />

  <Button
      android:id="@+id/btn_mulai"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/ucapan"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="80dp"
      android:layout_marginRight="50dp"
      android:backgroundTint="@color/white"
      android:elevation="10dp"
      android:padding="15dp"
      android:text="Ayo Mulai!"
      android:textColor="@color/black"
      android:textSize="12pt"
      android:textStyle="bold"
      tools:ignore="TouchTargetSizeCheck" />

  
  </RelativeLayout>