<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImagesActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="12pt"
        android:text="Selamat Datang \ndi Thirty One Studio"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GALLERY"
        android:layout_above="@id/progress_circle"
        android:textColor="#FF7517"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:textSize="12pt"
        android:layout_marginTop="50dp" />

    <ProgressBar
        android:id="@+id/progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:layout_marginTop="355dp"
        android:orientation="horizontal"
        />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_above="@id/progress_circle"
        android:layout_marginTop="80dp"
        android:elevation="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="55dp"
    android:background="@drawable/backgroundmain">

        <HorizontalScrollView
            android:id="@+id/singleImageHorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:id="@+id/singleImageLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/coupleLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/coupleImageView"
                        android:layout_width="150dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="130dp"
                        android:elevation="10dp"
                        android:background="@drawable/backgroundtransparant"
                        android:src="@drawable/couple"/>
                    <TextView
                        android:id="@+id/coupleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COUPLE"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/coupleImageView"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/graduateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/graduateImageView"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:elevation="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/backgroundtransparant"
                        android:src="@drawable/graduate"/>
                    <TextView
                        android:id="@+id/graduateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GRADUATE"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/graduateImageView"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/familyLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/familyImageView"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:elevation="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundtransparant"
                        android:src="@drawable/family"/>
                    <TextView
                        android:id="@+id/familyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAMILY"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/familyImageView"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/groupLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/groupImageView"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:elevation="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundtransparant"
                        android:src="@drawable/group"/>
                    <TextView
                        android:id="@+id/groupTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GROUP"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/groupImageView"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/maternityLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/maternityImageView"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:elevation="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundtransparant"
                        android:src="@drawable/maternity"/>
                    <TextView
                        android:id="@+id/maternityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MATERNITY"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/maternityImageView"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/preweddingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/preweddingImageView"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:elevation="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backgroundtransparant"
                        android:src="@drawable/prewedding"/>
                    <TextView
                        android:id="@+id/preweddingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PREWEDDING"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/preweddingImageView"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/button_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:backgroundTint="#FF7517"
            android:layout_below="@id/title"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:text="Buat Pesanan"
            tools:ignore="NotSibling,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button_tipesesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/warna1"
            android:layout_below="@id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:text="Lihat Tipe dan Sesi Foto"
            tools:ignore="NotSibling,TouchTargetSizeCheck" />
</RelativeLayout>

</RelativeLayout>