<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FotoOutdoorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="2"
            android:elevation="10dp"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/wedding"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/wedding"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wedding"
                    android:layout_centerHorizontal="true"
                    android:text="Wedding"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/prewedding"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/prewedding3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prewedding"
                    android:layout_centerHorizontal="true"
                    android:text="Prewedding"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/engagement"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/engagement"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/engagement"
                    android:layout_centerHorizontal="true"
                    android:text="Engagement"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/yearbook"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/yearbook"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/yearbook"
                    android:layout_centerHorizontal="true"
                    android:text="YearBook"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView

                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </GridLayout>
    </ScrollView>

</FrameLayout>