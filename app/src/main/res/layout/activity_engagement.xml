<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EngagementActivity">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:iss_auto_cycle="true"
        app:iss_delay="1000"
        app:iss_period="1000"
        app:iss_selected_dot="@drawable/default_selected_dot"
        app:iss_unselected_dot="@drawable/default_unselected_dot"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundputih"
        android:elevation="12dp"
        android:translationZ="8dp"
        android:layout_marginTop="220dp">

        <LinearLayout
            android:id="@+id/singleImageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/coupleLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/coupleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:text="Engagement Outdoor"
                    android:textColor="@color/warna1"
                    android:textSize="15pt"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pilihanTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="40dp"
            android:text="Pilihan Paket"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="30dp">

            <LinearLayout
                android:id="@+id/horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="290dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/backgroundpaket">
                    <TextView
                        android:id="@+id/epicTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/epicbg"
                        android:padding="10dp"
                        android:text="EPIC \t\t\t\t\t\t\t\t\t\t\t\t\t\t\t RP. 500.000"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tanggalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/namaTextView"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="25dp"
                        android:text="- 30 Menit photoshoot
                \n- Frame + Cetak Karton Vynil \n- Maksimal 1 dresscode
                \n- Maksimal 1 tema
                \n- Semua foto sudah diedit"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="NotSibling" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="290dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/backgroundpaket">
                    <TextView
                        android:id="@+id/epic1TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/epicbg"
                        android:padding="10dp"
                        android:text="LEGEND \t\t\t\t\t\t\t\t\t\t RP. 1.000.000"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tanggal1TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/namaTextView"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="25dp"
                        android:text="- 60 Menit photoshoot
                \n- Frame + Cetak Canvas
                \n- Maksimal 2 Dresscode
                \n- Maksimal 2 Tema
                \n- Semua foto sudah diedit"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="NotSibling" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="290dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/backgroundpaket">
                    <TextView
                        android:id="@+id/epic2TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/epicbg"
                        android:padding="10dp"
                        android:text="MYTHIC \t\t\t\t\t\t\t\t\t RP. 1.200.000"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tanggal2TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/namaTextView"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="25dp"
                        android:text="- 90 Menit photoshoot
                \n- Frame + Cetak Canvas
                \n- Cetak (21x30) 4 Lembar
                \n- Maksimal 2 Tema
                \n- Make Up
                \n- Maksimal 2 Dresscode
                \n- Semua foto sudah diedit"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="NotSibling" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="230dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/backgroundpaket">
                    <TextView
                        android:id="@+id/infolainTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/epicbg"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:text="INFORMASI TAMBAHAN"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/infoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/namaTextView"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="25dp"
                        android:text="- Gaun Engagement (Rp. 600.000)"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="NotSibling" />
                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/button1_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/warna1"
            android:padding="20dp"
            android:text="Booking Sekarang"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="NotSibling,TouchTargetSizeCheck" />
    </RelativeLayout>

</RelativeLayout>